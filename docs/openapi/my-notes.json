                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/error"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "id": {
                "type": "string",
                "description": "A unique identifier for a note.",
                "format": "uuid",
                "readOnly": true
            },
            "note": {
                "type": "object",
                "properties": {
                    "id": {
                        "$ref": "#/components/schemas/id"
                    },
                    "title": {
                        "type": "string",
                        "description": "Title of the note.",
                        "example": "My shopping list"
                    },
                    "content": {
                        "type": "string",
                        "description": "The content of the note.",
                        "example": "1. Milk\n2. Apples\n3. Bread"
                    },
                    "created_at": {
                        "type": "string",
                        "description": "The timestamp the note was created.",
                        "format": "date-time"
                    },
                    "modified_at": {
                        "type": "string",
                        "description": "The timestamp the note was last modified.",
                        "format": "date-time"
                    }
                }
            },
            "offset": {
                "type": "integer",
                "description": "Pointer to navigate between pages.",
                "minimum": 0,
                "example": 10
            },
            "limit": {
                "type": "integer",
                "description": "Number of notes to be returned in each page.",
                "minimum": 1,
                "maximum": 10,
                "example": 10
            },
            "total": {
                "type": "integer",
                "description": "Total number of notes.",
                "minimum": 0,
                "example": 15
            },
            "user": {
                "type": "object",
                "properties": {
                    "first_name": {
                        "type": "string",
                        "description": "First name of the user.",
                        "minLength": 1,
                        "maxLength": 30,
                        "example": "Jane"
                    },
                    "last_name": {
                        "type": "string",
                        "description": "Last name of the user.",
                        "minLength": 1,
                        "maxLength": 30,
                        "example": "Doe"
                    },
                    "email": {
                        "type": "string",
                        "description": "Email ID used to sign up for My Notes.",
                        "format": "email"
                    },
                    "password": {
                        "type": "string",
                        "description": "Password for My Notes.",
                        "minLength": 8
                    }
                }
            },
            "error": {
                "type": "object",
                "properties": {
                    "error_id": {
                        "type": "string",
                        "description": "Unique ID to help debug the error.",
                        "format": "uuid"
                    },
                    "error_code": {
                        "type": "string",
                        "description": "Error code."
                    },
                    "error_description": {
                        "type": "string",
                        "description": "Error description."
                    },
                    "timestamp": {
                        "type": "string",
                        "description": "Timestamp the error occurred.",
                        "format": "date-time"
                    }
                }
            }
        }
    }
}