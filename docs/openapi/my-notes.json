                ],
                "summary": "Update a Note",
                "description": "Update an existing note",
                "operationId": "update-note",
                "requestBody": {
                    "description": "Update an existing note",
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/note"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
